{
    "name": "danger-plugin-github-notion",
    "description": "This plugin connects github PRs into Notion Projects",
    "author": {
        "name": "Rafael Ugolini",
        "email": "rafael.ugolini@gmail.com"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/rafaelugolini/danger-plugin-github-notion.git"
    },
    "bugs": {
        "url": "https://github.com/rafaelugolini/danger-plugin-github-notion/issues"
    },
    "homepage": "https://github.com/rafaelugolini/danger-plugin-github-notion#readme",
    "keywords": [
        "danger",
        "danger-plugin",
        "danger-notion-github notion github"
    ],
    "version": "0.0.2",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "files": [
        "dist",
        "types"
    ],
    "scripts": {
        "precommit": "lint-staged",
        "commit": "git-cz",
        "commitmsg": "validate-commit-msg",
        "build": "tsc",
        "test": "jest",
        "predocs": "rm -rf docs/",
        "docs": "esdoc -c .esdoc.json",
        "prepublish": "npm run build",
        "semantic-release": "semantic-release pre && npm publish && semantic-release post",
        "prettier": "prettier",
        "prettier-write": "npm run prettier -- --parser typescript --no-semi --trailing-comma es5 --write --print-width 120",
        "prettier-project": "npm run prettier-write -- 'src/**/*.{ts,tsx}'",
        "lint": "tslint \"src/**/*.ts\""
    },
    "license": "MIT",
    "engines": {
        "node": ">=18.0.0"
    },
    "devDependencies": {
        "@trivago/prettier-plugin-sort-imports": "^4.2.0",
        "@types/jest": "^29.5.3",
        "commitizen": "^4.3.0",
        "cz-conventional-changelog": "^3.3.0",
        "danger": "^11.2.8",
        "husky": "^8.0.3",
        "jest": "^29.6.2",
        "lint-staged": "^13.2.3",
        "prettier": "^3.0.1",
        "semantic-release": "^21.0.7",
        "ts-jest": "^29.1.1",
        "tslint": "^6.1.3",
        "typescript": "^5.1.6",
        "validate-commit-msg": "^2.12.1"
    },
    "optionalDependencies": {
        "esdoc": "^1.1.0"
    },
    "config": {
        "commitizen": {
            "path": "cz-conventional-changelog"
        }
    },
    "lint-staged": {
        "*.@(ts|tsx)": [
            "tslint --fix",
            "npm run prettier-write --",
            "git add"
        ]
    },
    "jest": {
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js"
        ],
        "transform": {
            ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
        },
        "testRegex": "(.test)\\.(ts|tsx)$",
        "testPathIgnorePatterns": [
            "\\.snap$",
            "<rootDir>/node_modules/"
        ]
    },
    "dependencies": {
        "@notionhq/client": "^2.2.10",
        "octokit": "^3.1.0"
    }
}
